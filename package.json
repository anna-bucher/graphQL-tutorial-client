{
  "name": "hackernews-react-apollo",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^10.0.4",
    "@types/prop-types": "^15.5.2",
    "@types/react": "^16.3.13",
    "@types/react-dom": "^16.0.5",
    "@types/react-router-dom": "^4.2.6",
    "apollo-codegen": "^0.19.1",
    "get-graphql-schema": "^2.1.1",
    "react-scripts-ts": "2.15.1",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "apollo-client-preset": "^1.0.8",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "react": "^16.3.2",
    "react-apollo": "^2.1.4",
    "react-dom": "^16.3.2",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2"
  },
  "scripts": {
    "start": "react-scripts-ts start",
    "build": "react-scripts-ts build",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject",
    "schema":
      "get-graphql-schema http://localhost:4000 > ./src/_generated/schema.json --json",
    "types":
      "apollo-codegen generate ./src/**/queries.ts --addTypename --schema ./src/_generated/schema.json --target typescript --output ./src/_generated/types.ts"
  },
  "importSort": {
    ".js, .jsx, .es6, .es": {
      "parser": "babylon",
      "style": "import-sort-style-module",
      "options": {}
    },
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "import-sort-style-module",
      "options": {}
    }
  }
}
